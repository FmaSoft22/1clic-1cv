                        </div>
                        <div class="form-linear">
                            <div class="form-group">
                                <label class="form-label" for="firstname">Pays<span class="ti-alert "></span></label>
                                <input type="text" name="identify" placeholder="*Pays" class="form-control" id="identify"   />
                            </div>
                        </div>
                        <div class="form-linear">
                            <div class="form-group">
                                <label class="form-label" for="firstname">Téléphone<span class="ti-alert "></span></label>
                                <input type="text" name="identify" placeholder="*Téléphone" class="form-control" id="identify"   />
                            </div>
                        </div>
                        <div class="form-linear">
                            <div class="form-group">
                                <label class="form-label" for="firstname">Message<span class="ti-alert "></span></label>
                                <textarea rows="6" cols="8" name="identify" placeholder="Message" class="form-control" id="identify">

                                </textarea>
                            </div>
                        </div>
                        <div class=" applyTemplateChoose" style="text-align: center;margin-top: 20px;">
                            <button onclick="ValidChooseTemplate(this)" class="btn_generate  ff3d3c-bg">Envoyer</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </section>
{% endblock %}